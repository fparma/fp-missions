if (!isdedicated) then
{
	player setVariable ["BIS_noCoreConversations", true];
	waitUntil {!isNull player};
	player addEventHandler ["killed",{nul=_this execVM "source\burial.sqf"}];
	player switchMove "amovpercmstpslowwrfldnon_player_idlesteady03";  
};

